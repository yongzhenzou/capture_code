<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/clTitlte"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/title_left_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="44dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_back_black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
<!--    android:onClick="@{(view)->viewModel.leftButtonClick(view)}"-->

        <TextView
            android:id="@+id/title_center_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#30365A"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
<!--    android:text="@{viewModel.showCenterTitleField}"-->

        <TextView
            android:id="@+id/title_right_btn_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:minWidth="44dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="#30365A"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
<!--    android:text="@{viewModel.showRightTitleField}"-->
<!--    android:visibility="@{viewModel.showRightButtonVisiableField ? View.VISIBLE : View.GONE}"-->
<!--</layout>-->